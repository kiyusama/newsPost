<h1>Articles#show</h1>
<div>
    <p>タイトル</p>
    <%= @article.title %>
</div>
<div>
    <p>本文</p>
    <%= @article.body %>
</div>
<div>
    <p>ジャンル</p>
    <%= @article.genre %>
</div>
<div>
    <%= link_to 'Edit', edit_article_path(@article) %>
</div>
<div>
    <%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    <%= link_to '削除', article_path(@article), data: { turbo_method: :delete } %>
</div>

<%= link_to 'Back', articles_index_path %>
