<h1>Articles#index</h1>
<div>
    <%= link_to 'Back', root_path %>
</div>
<div> 
    <%= link_to 'Post a New Article', articles_new_path %>
</div>

<table>
    <thead>
        <tr>
            <th>タイトル</th>
            <th>本文</th>
            <th>ジャンル</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.title %></td>
                <td><%= article.body %></td>
                <td><%= article.genre %></td>
                <td>
                    <%= link_to 'Show', article_path(article) %>
                    <%= link_to 'Edit', edit_article_path(article) %>
                    <%= link_to '削除', article_path(@article), data: { turbo_method: :delete } %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>